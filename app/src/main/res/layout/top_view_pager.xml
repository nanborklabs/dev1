<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:layout_margin="12dp"

    app:cardBackgroundColor="@color/cardview_light_background"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Best Value Packs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:id="@+id/textView14"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:text="Complete Package From Preparation to End!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView14"
            android:layout_alignStart="@+id/textView14"
            android:id="@+id/textView16" />
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_below="@+id/textView16"
           android:layout_height="200dp">
           <android.support.v4.view.ViewPager
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:id="@+id/home_top_pager"

               android:layout_marginRight="16dp"

               android:layout_alignStart="@+id/textView16">


           </android.support.v4.view.ViewPager>
           <com.strictlyindian.rentsmart.CustomUI.InkPageIndicator

               android:id="@+id/indicator"
               android:layout_width="match_parent"
               android:layout_gravity="bottom"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_marginBottom="8dp"
               android:layout_marginTop="@dimen/padding_normal"
               app:pageIndicatorColor="@color/material_grey300"
               app:currentPageIndicatorColor="@color/material_deeppurpleA700" />
       </FrameLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>