<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <!--Delivery Location Container-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/pv_delivery_container"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_location"
                    android:scaleType="center"
                    android:id="@+id/imageView11"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_alignTop="@+id/pv_del_loc_text"
                    android:layout_alignBottom="@+id/pv_location_value" />
                <TextView
                    android:text="15 g MartaHalli , Bangalore"
                    android:layout_width="wrap_content"
                    android:minLines="3"
                    android:textStyle="normal|bold"
                    android:maxLines="3"
                    android:textSize="20sp"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pv_del_loc_text"
                    android:layout_alignStart="@+id/pv_del_loc_text"
                    android:id="@+id/pv_location_value" />


                <TextView
                    android:text="Delivery Location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pv_del_loc_text"
                    android:textSize="18sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_toEndOf="@+id/imageView11"
                     />

                <Button
                    android:text="Change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/pv_location_value"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp"
                    android:id="@+id/change_location"
                    android:layout_alignTop="@+id/pv_del_loc_text"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/pv_loc_div"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/material_grey500"/>

            <!--Phone Number Container-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_phone_black_24dp"

                    android:id="@+id/pv_phone_img"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_alignTop="@+id/pv_phone_text"
                    android:layout_alignBottom="@+id/pv_pno_value" />
                <TextView
                    android:text="9688612122"
                    android:textStyle="normal|bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pv_phone_text"
                    android:layout_alignStart="@+id/pv_phone_text"
                    android:id="@+id/pv_pno_value" />


                <TextView
                    android:text="Phone Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pv_phone_text"
                    android:textSize="16sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/pv_phone_img"
                     />

                <Button
                    android:text="Change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/pv_pno_value"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp"
                    android:id="@+id/pv_phone_change_button"
                    android:layout_alignTop="@+id/pv_phone_text"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>




</LinearLayout>